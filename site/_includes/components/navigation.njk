{% macro navigation(items = [], currentUrl = '/') %}
  {% set current = currentUrl or '/' %}
<nav class="site-nav" aria-label="Primary">
  <ul class="site-nav__list">
    {% for item in items %}
      {% set isActive = current == item.url or (item.url != '/' and current != '/' and current.startsWith(item.url)) %}
      <li class="site-nav__item">
        <a
          href="{{ item.url }}"
          class="site-nav__link{{ ' is-active' if isActive }}"
          {% if isActive %}aria-current="page"{% endif %}
        >
          {{ item.label }}
        </a>
      </li>
    {% endfor %}
  </ul>
</nav>
{% endmacro %}
